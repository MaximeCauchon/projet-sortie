<!DOCTYPE html>
<html lang="fr-FR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Sortir{% block title %}{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
    {% endblock %}
</head>
<body>
<header>
    <div class="header m-8 flex justify-between items-center">
        <h1 class="">Sortir !</h1>
        <nav>
            <ul class="flex space-x-8 list-none">
                {% if app.user %}
                    <li><a href="{{ path("app_affichage_sorties") }}">Accueil</a></li>
                    <li><a href="{{ path("nouvelle_sortie") }}">Créer une sortie</a></li>
                    {% if is_granted("ROLE_ADMIN") %}
                        <li><a href="{{ path('admin_gestionParticipants') }}" title="Gestion des Participants">Gestion
                                des Participants</a></li>
                        <li><a href="{{ path('admin_gestionVilles') }}" title="Gestion des Villes">Villes</a></li>
                        <li><a href="{{ path('admin_gestionCampus') }}" title="Gestion des Campus">Campus</a></li>
                    {% endif %}
                    <li><a href="{{ path("participant_editLoggedUser") }}" title="Modifier mon profil">Mon Profil</a></li>
                    <li><a href="{{ path("app_logout") }}" title="Déconnectez-vous">Se déconnecter</a></li>
                {% else %}
                    <li><a href="{{ path("app_login") }}" title="Connectez-vous">Se connecter</a></li>
                {% endif %}
            </ul>
        </nav>
    </div>
</header>
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
{% block body %}{% endblock %}
</body>
</html>
